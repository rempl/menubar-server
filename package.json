{
  "name": "menubar-server",
  "version": "1.0.0",
  "description": "Rempl server GUI",
  "license": "MIT",
  "repository": "rempl/menubar-server",
  "homepage": "https://github.com/rempl/menubar-server",
  "bugs": {
    "url": "https://github.com/rempl/menubar-server/issues"
  },
  "dependencies": {
    "basisjs": "basisjs/basisjs#4b2406fedcb13c18590157ae8c53ddfc030e8ac5",
    "basisjs-tools-server": "basisjs/basisjs-tools-server#6f7d3514429303676098fc6abeb794f16d6d9705"
  },
  "devDependencies": {
    "electron": "^1.4.10",
    "electron-packager": "^8.3.0",
    "eslint": "^3.11.1",
    "jscs": "^3.0.7"
  },
  "main": "./src/main.js",
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": "error",
      "no-undef": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  },
  "scripts": {
    "check-style": "jscs ./src && eslint ./src",
    "build-mac": "npm run check-style; rm -rf ./build/*darwin*; electron-packager . Rempl --out=./build --platform=darwin --arch=x64 --version=1.4.11 --icon=./res/icon.icns --overwrite",
    "build-win": "npm run check-style; rm -rf ./build/*win32*; electron-packager . Rempl --out=./build --platform=win32 --arch=x64 --version=1.4.11 --icon=./res/icon.icns --overwrite",
    "build": "npm run build-mac",
    "start": "electron ."
  }
}
